@import 'nib'

#header
  .navbar
    margin-bottom: 40px;
    .nav > li > a
      padding: 0
  .navbar-inner
    margin-bottom: 0px;
    min-height: 40px;
    padding-top: 5px;
    background: #3B3B41;
    filter: none;
    text-shadow: 1px 1px 1px #0A0C0E;
    border: none;
    color: white;
    border-radius: 0px;
    border-bottom: 1px solid #38383D;
    background-color: #1D354D;
    box-shadow: inset 0 1px 0 #28496B;
    .brand
      display: inline-block;
      overflow: hidden;
      width: 130px;
      height: 32px;
      color: white;
      font-size: 18px;
      font-weight: 600;
      line-height: 600;
      background: url(../images/logo.png) no-repeat -60px 0;
      text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);